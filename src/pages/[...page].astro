---
import type { GetStaticPaths } from "astro";
import Pagination from "../components/control/Pagination.astro";
import PostPage from "../components/PostPage.astro";
import { PAGE_SIZE } from "../constants/constants";
import MainGridLayout from "../layouts/MainGridLayout.astro";
import { getSortedPosts } from "../utils/content-utils";

export const getStaticPaths = (async ({ paginate }) => {
	const allBlogPosts = await getSortedPosts();

	// --- 🕵️ 间谍代码开始 🕵️ ---
	// 我们在这里循环检查每一篇文章
	for (const post of allBlogPosts) {
		// 找到我们想调查的那篇《Include Video in the Posts》
		if (post.data.title.includes("Video")) {
			// 把它的标题改成一份“情报报告”
			post.data.title = `[情报] unlisted 的值是: ${post.data.unlisted}，类型是: ${typeof post.data.unlisted}`;
		}
	}
	// --- 🕵️ 间谍代码结束 🕵️ ---

	const postsForHomepage = allBlogPosts.filter(post => post.data.unlisted !== true);

	return paginate(postsForHomepage, { pageSize: PAGE_SIZE });
}) satisfies GetStaticPaths;

const { page } = Astro.props;

const len = page.data.length;
---

<MainGridLayout>
	<PostPage page={page}></PostPage>
	<Pagination class="mx-auto onload-animation" page={page} style={`animation-delay: calc(var(--content-delay) + ${(len)*50}ms)`}></Pagination>
</MainGridLayout>
